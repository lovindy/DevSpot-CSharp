@model IEnumerable<DevSpot.Models.JobPosting>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 mb-0">Developer Jobs</h1>
        <a asp-action="Create" class="btn btn-primary px-4">
            Post a Job
        </a>
    </div>

    <div class="row g-4">
        @foreach (var job in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm hover-shadow transition">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="card-title text-primary mb-0">@job.Title</h5>
                            <span class="badge bg-light text-dark">
                                @job.PostedDate.ToString("MMM dd")
                            </span>
                        </div>
                        <h6 class="mb-2">@job.Company</h6>
                        <p class="text-muted mb-2">
                            <i class="bi bi-geo-alt me-1"></i>
                            @job.Location
                        </p>
                        <p class="card-text mb-3">
                            @(job.Description.Length > 150
                                ? job.Description.Substring(0, 147) + "..."
                                : job.Description)
                        </p>
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="#" class="btn btn-outline-primary btn-sm">View Details</a>
                            @if (job.IsApproved)
                            {
                                <span class="badge bg-success">Approved</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-2px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
    .transition {
        transition: all .2s ease-in-out;
    }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}