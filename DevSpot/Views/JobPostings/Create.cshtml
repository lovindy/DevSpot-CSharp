@model DevSpot.ViewModels.JobPostingViewModel

<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
	<div class="bg-white rounded-lg shadow-sm border border-gray-200">
		<div class="px-6 py-8">
			<div class="text-center mb-8">
				<h1 class="text-3xl font-bold text-gray-900">Post a New Job</h1>
				<p class="mt-2 text-gray-600">Share your opportunity with thousands of developers</p>
			</div>

			<form asp-action="Create" method="post">
				<div asp-validation-summary="ModelOnly" class="mb-6 p-4 bg-red-50 border border-red-200 rounded-md text-red-600"></div>

				<div class="space-y-6">
					<div>
						<label asp-for="Title" class="block text-sm font-medium text-gray-700 mb-1">Job Title</label>
						<input asp-for="Title"
							   class="w-full px-4 py-3 rounded-md border border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50 transition-colors"
							   placeholder="e.g. Senior Full Stack Developer" />
						<span asp-validation-for="Title" class="mt-1 text-sm text-red-600"></span>
					</div>

					<div>
						<label asp-for="Company" class="block text-sm font-medium text-gray-700 mb-1">Company Name</label>
						<input asp-for="Company"
							   class="w-full px-4 py-3 rounded-md border border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50 transition-colors"
							   placeholder="e.g. Tech Solutions Inc." />
						<span asp-validation-for="Company" class="mt-1 text-sm text-red-600"></span>
					</div>

					<div>
						<label asp-for="Location" class="block text-sm font-medium text-gray-700 mb-1">Location</label>
						<input asp-for="Location"
							   class="w-full px-4 py-3 rounded-md border border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50 transition-colors"
							   placeholder="e.g. New York, NY (Remote Available)" />
						<span asp-validation-for="Location" class="mt-1 text-sm text-red-600"></span>
					</div>

					<div>
						<label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-1">Job Description</label>
						<textarea asp-for="Description"
								  class="w-full px-4 py-3 rounded-md border border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50 transition-colors"
								  rows="8"
								  placeholder="Describe the role, requirements, and what makes your company great..."></textarea>
						<span asp-validation-for="Description" class="mt-1 text-sm text-red-600"></span>
					</div>

					<div class="flex flex-col space-y-3">
						<button type="submit" class="w-full px-6 py-3 bg-green-600 text-white font-medium rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition-colors">
							Post Job
						</button>
						<a asp-action="Index" class="w-full px-6 py-3 bg-gray-100 text-gray-700 font-medium rounded-md hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors text-center">
							Cancel
						</a>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>

<style>
	/* Custom focus styles */
	input:focus, textarea:focus {
		outline: none;
	}

	/* Validation styling */
	.input-validation-error {
		border-color: #dc2626 !important;
	}

	.field-validation-error {
		display: block;
		margin-top: 0.25rem;
	}
</style>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	<link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
}