@model DevSpot.ViewModels.JobPostingViewModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h1 class="display-5 mb-4 text-center">Post a New Job</h1>

                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-bold">Job Title</label>
                            <input asp-for="Title" class="form-control form-control-lg" placeholder="e.g. Senior Full Stack Developer" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Company" class="form-label fw-bold">Company Name</label>
                            <input asp-for="Company" class="form-control form-control-lg" placeholder="e.g. Tech Solutions Inc." />
                            <span asp-validation-for="Company" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Location" class="form-label fw-bold">Location</label>
                            <input asp-for="Location" class="form-control form-control-lg" placeholder="e.g. New York, NY (Remote Available)" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold">Job Description</label>
                            <textarea asp-for="Description" class="form-control" rows="6"
                                      placeholder="Describe the role, requirements, and what makes your company great..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Post Job</button>
                            <a asp-action="Index" class="btn btn-light">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}